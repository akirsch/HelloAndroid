<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/online" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo"
        android:layout_height="@dimen/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/logoMargin"
        android:scaleType="centerCrop"
        android:src="@drawable/u_symbol" />

    <ImageView
        android:id="@+id/name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/udacity_txt" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tag"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/taglineMargin"
        android:fontFamily="sans-serif"
        android:text="@string/tagline"
        android:textColor="@android:color/white"
        android:textSize="@dimen/taglineSize" />

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tagline"
        android:layout_marginLeft="@dimen/linearLeftMargin"
        android:layout_marginTop="@dimen/margin_18"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/address_icon"
            style="@style/VerticalIconTheme"
            android:src="@drawable/map_marker" />

        <ImageView
            android:id="@+id/phone_icon"
            style="@style/VerticalIconTheme"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/web_icon"
            style="@style/VerticalIconTheme"
            android:src="@drawable/web1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagline"
        android:layout_marginLeft="@dimen/textLinearLeftMargin"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_toRightOf="@id/icons"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            style="@style/TxtTheme"
            android:layout_width="@dimen/addressWidth"
            android:layout_marginBottom="@dimen/margin_16"
            android:autoLink="map"
            android:paddingTop="@dimen/textPadding"
            android:text="@string/address1"/>


        <TextView
            android:id="@+id/phoneNumber"
            style="@style/TxtTheme"
            android:layout_width="match_parent"
            android:autoLink="phone"
            android:text="@string/phone_number"/>

        <TextView
            android:id="@+id/website"
            style="@style/TxtTheme"
            android:layout_width="match_parent"
            android:autoLink="web"
            android:paddingTop="@dimen/textPadding"
            android:text="@string/website"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebookIcon"
            style="@style/IconTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/twitterIcon"
            style="@style/IconTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/instagramIcon"
            style="@style/IconTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instagram" />


    </LinearLayout>

</RelativeLayout>