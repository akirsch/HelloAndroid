<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IconTheme">
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
    </style>


    <style name="TxtTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">@dimen/margin_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_32</item>
    </style>


</resources>
